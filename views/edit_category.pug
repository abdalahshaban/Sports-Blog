extends layout

block content
   .container
    h1 #{title}
    form(action="/categories/edit/"+category._id, method="post")
        .form-group
            label(for="title") Title
            input.form-control(type="text",name="title",id="title",value=category.title)
        .form-group
            label(for="description") Description
            textarea.form-control(name="description", cols="30", rows="10",id="description") #{category.description}
        input.btn.btn-primary(type="submit", value="Save",name="submit")
        a.btn.btn-danger(href="/manage/categories") Back
            
