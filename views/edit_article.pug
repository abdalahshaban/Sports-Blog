extends layout

block content
   .container
    h1 #{title}
    form(action="/articles/edit/"+article._id, method="post")
        .form-group
            label(for="title") Title
            input.form-control(type="text",name="title",id="title" ,value=article.title)
        .form-group
            label(for="subtitle") SubTitle
            input.form-control(type="text",name="subtitle",id="subtitle",value=article.subtitle)
        .form-group
            label(for="category") category
            select.form-control(name="category",id="category")
                each category , i in categories
                    if(category._id==article.category)
                        option(value=category._id,selected) #{category.title}
                    else
                        option(value=category._id) #{category.title}
        .form-group
            label(for="author") Author
            input.form-control(type="text",name="author",id="author",value=article.author)
        .form-group
            label(for="body") Body
            textarea.form-control(name="body",id="body") #{article.body}
                    
                
        input.btn.btn-primary(type="submit", value="Save",name="submit")
        a.btn.btn-danger(href="/manage/articles") Back
            
